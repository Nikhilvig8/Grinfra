@model IEnumerable<GrInfra.Models.DoubleSite>

    @{
    ViewBag.Title = "Index";
    }

    <div class="tab-content px-sm-0 clearfix" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="report-details-cover">
                <div class="card">
                    <div class="card-header text-white" style="background-color:navy">
                        <h6 class="text-uppercase" style="padding:1rem">Doublle Punch Sites</h6>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "DoublePunchMasters", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                        <div class="form-group row">
                            <div class="col-md-6" style="margin-top:5px">
                                <label>Branch:</label>
                                <div class="selectdiv">
                                    @Html.DropDownList("branch", (IEnumerable<SelectListItem>)ViewBag.BranchList, htmlAttributes: new { id = "branch", @class = "form-control select2", @required = "required" })
                                </div>
                                <label style="color:red">@ViewBag.Error</label>
                            </div>
                            <div class="col-md-12" style="margin-top:5px">
                                <div class="input-group-append" style="align-content:center;justify-content:center">
                                    <button type="submit" class="form-control col-2">
                                        <i class="fa fa-plus-circle"></i> Add
                                    </button>
                                </div>
                            </div>
                        </div>
                        }

                        <div>
                            <h2>Double Punch Sites</h2>
                            <div class="table-responsive cmn-table mb-3">
                                <table class="table table-striped frz-announcement">
                                    <thead>
                                        <tr>
                                            <th>
                                                Branch Code
                                            </th>
                                            <th>
                                                Branch Description
                                            </th>
                                            <th>
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.HiddenFor(modelItem => item.Id)
                                                @Html.DisplayFor(modelItem => item.BUCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BUDescription)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Delete","DoublePunchMasters",new { id=@item.Id })"><i class="fa fa-trash fa-2x" style="color:red;"></i></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

